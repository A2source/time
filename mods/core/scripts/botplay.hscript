var text;

function start(song)
{
    text = new FlxText(0, 0, -1, 'BOTPLAY');
    text.setFormat(DEFAULT_FONT, 20, 0xFFFFFFFF, 'left', BORDER_OUTLINE, 0xFF000000);
    text.cameras = [cams.hud];
    text.screenCenter();
    text.y = STRUMLINE_Y;
    text.y += text.height * 1.5;
    text.borderSize = 3;
    add(text);
}

function update(dt)
{
    text.visible = game.botplay;
}