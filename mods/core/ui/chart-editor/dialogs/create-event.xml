<?xml version="1.0" encoding="utf-8"?>
<vbox width="500">
    <text-field placeholder="Enter event name..." styleNames="event-name" restrictChars="a-zA-Z_ " />
    <label text="Plase enter a name." styleNames="event-name-validity" />

    <label text="mod directory" styleNames="mod-directory" style="padding-top: 5px; padding-bottom: 5px;" />
    
    <rule />

    <hbox horizontalAlign="center">
        <vbox>
            <label text="Entries" horizontalAlign="center" />
            <listview width="225" height="350" styleNames="entries-view">
                <item-renderer width="100%">
                    <hbox width="100%">
                        <label id="name" width="100%" verticalAlign="center" />
                        <button id="delete" text="x" horizontalAlign="right" style="background-color: red;" />
                    </hbox>
                </item-renderer>
            </listview>
            <button text="+" horizontalAlign="center" styleNames="entries-add char-button" style="background-color: lime; border-color: black;" />
        </vbox>

        <vbox>
            <label text="Edit Entry (Default Value)" horizontalAlign="center" />
            <vbox width="225" height="350" styleNames="edit-entry" style="background-color: #170E17; padding: 6px; border-color: white; border-radius: 3px; border-size: 2px;" />
        </vbox>
    </hbox>

    <rule />

    <button text="Create" horizontalAlign="center" disabled="true" styleNames="event-create" style="font-size: 12px;" />
</vbox>