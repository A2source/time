<?xml version="1.0" encoding="utf-8"?>
<panel text="Shadows" width="175" height="350" top="365" left="620">
    <hbox width="100%" height="100%">
        <property-grid width="100%" height="100%">
            <property label="Simple Shadows" type="boolean" value="true" styleNames="simple-shadows" />
            
            <hbox width="100%" padding="5px 0px">
                <label text="Alpha" width="100%" verticalAlign="center" />
                <rule direction="vertical" horizontalAlign="center" />
                <slider width="100%" horizontalAlign="right" styleNames="shadow-alpha" min="0" max="1" />
            </hbox>

            <property-group text="Base">
                <property-group text="Origin">
                    <property label="X" type="number" value="0" step="1" styleNames="base-originx" />
                    <property label="Y" type="number" value="0" step="1" styleNames="base-originy" />
                </property-group>

                <property-group text="Offset">
                    <property label="X" type="number" value="0" step="1" styleNames="base-offsetx" />
                    <property label="Y" type="number" value="0" step="1" styleNames="base-offsety" />
                </property-group>

                <property-group text="Scale">
                    <property label="X" type="number" value="0" step="0.001" precision="3" styleNames="base-scalex" />
                    <property label="Y" type="number" value="0" step="0.001" precision="3" styleNames="base-scaley" />
                </property-group>

                <property-group text="Skew">
                    <property label="X" type="number" value="0" step="1" styleNames="base-skewx" />
                    <property label="Y" type="number" value="0" step="1" styleNames="base-skewy" />
                </property-group>
            </property-group>

            <property-group text="Animation">
                <property-group text="Offset">
                    <property label="X" type="number" value="0" step="1" styleNames="anim-offsetx" />
                    <property label="Y" type="number" value="0" step="1" styleNames="anim-offsety" />
                </property-group>

                <property-group text="Scale">
                    <property label="X" type="number" value="0" step="0.001" precision="3" styleNames="anim-scalex" />
                    <property label="Y" type="number" value="0" step="0.001" precision="3" styleNames="anim-scaley" />
                </property-group>

                <property-group text="Skew">
                    <property label="X" type="number" value="0" step="1" styleNames="anim-skewx" />
                    <property label="Y" type="number" value="0" step="1" styleNames="anim-skewy" />
                </property-group>
            </property-group>
        </property-grid>
    </hbox>
</panel>