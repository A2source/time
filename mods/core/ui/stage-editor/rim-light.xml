<?xml version="1.0" encoding="utf-8"?>
<panel text="Rim Light" width="150" height="350" top="365" left="465">
    <hbox width="100%" height="100%">
        <property-grid width="100%" height="100%">
            <property-group text="Overlay">
                <property label="Colour" type="color" value="#ffffff" styleNames="rim-overlay-col" />

                <hbox width="100%" padding="5px 0px">
                    <label text="Alpha" width="100%" verticalAlign="center" />
                    <rule direction="vertical" horizontalAlign="center" />
                    <slider width="100%" horizontalAlign="right" styleNames="rim-overlay-alpha" min="0" max="1" />
                </hbox>
            </property-group>
    
            <property-group text="Satin">
                <property label="Colour" type="color" value="#ffffff" styleNames="rim-satin-col" />

                <hbox width="100%" padding="5px 0px">
                    <label text="Alpha" width="100%" verticalAlign="center" />
                    <rule direction="vertical" horizontalAlign="center" />
                    <slider width="100%" horizontalAlign="right" styleNames="rim-satin-alpha" min="0" max="1" />
                </hbox>
            </property-group>

            <property-group text="Inner">
                <property label="Colour" type="color" value="#ffffff" styleNames="rim-inner-col" />

                <hbox width="100%" padding="5px 0px">
                    <label text="Alpha" width="100%" verticalAlign="center" />
                    <rule direction="vertical" horizontalAlign="center" />
                    <slider width="100%" horizontalAlign="right" styleNames="rim-inner-alpha" min="0" max="1" />
                </hbox>
            </property-group>

            <hbox width="100%" padding="5px 0px">
                <label text="Angle" width="100%" verticalAlign="center" />
                <rule direction="vertical" horizontalAlign="center" />
                <slider width="100%" horizontalAlign="right" styleNames="rim-angle" min="0" max="360" />
            </hbox>

            <hbox width="100%" padding="5px 0px">
                <label text="Distance" width="100%" verticalAlign="center" />
                <rule direction="vertical" horizontalAlign="center" />
                <slider width="100%" horizontalAlign="right" styleNames="rim-dist" min="0" max="50" />
            </hbox>
        </property-grid>
    </hbox>
</panel>